<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:background="@color/card_color"
    android:padding="@dimen/card_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="@dimen/photo"
            android:layout_height="@dimen/photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/boris_babayan"
            >
        </ImageView>

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/person_photo"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/name1"
            android:layout_marginStart="@dimen/name_margin"
            >
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/person_min_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upper_block"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/card_margin"
        android:text="@string/min_info1"
        >
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>